<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/floor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/floor"
        android:scaleType="centerCrop"/>
    <GridLayout
        android:layout_centerInParent="true"
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4">

        <ImageView
            android:id="@+id/ball"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/ball"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/ball1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/ball"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/ball2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="2"
            android:src="@drawable/ball"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/ball3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="0"
            android:layout_column="3"
            android:src="@drawable/ball"
            android:onClick="increaseScore"/>

        <ImageView
            android:id="@+id/ball4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

        <ImageView
            android:id="@+id/ball5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="1"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

        <ImageView
            android:id="@+id/ball6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

        <ImageView
            android:id="@+id/ball7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="1"
            android:layout_column="3"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

        <ImageView
            android:id="@+id/ball8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

        <ImageView
            android:id="@+id/ball9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="1"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

        <ImageView
            android:id="@+id/ball10"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="2"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

        <ImageView
            android:id="@+id/ball11"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="2"
            android:layout_column="3"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

        <ImageView
            android:id="@+id/ball12"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="0"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

        <ImageView
            android:id="@+id/ball13"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="1"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

        <ImageView
            android:id="@+id/ball14"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="2"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

        <ImageView
            android:id="@+id/ball15"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="3"
            android:layout_column="3"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

        <ImageView
            android:id="@+id/ball16"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="0"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

        <ImageView
            android:id="@+id/ball17"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="1"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

        <ImageView
            android:id="@+id/ball18"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="2"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

        <ImageView
            android:id="@+id/ball19"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_row="4"
            android:layout_column="3"
            android:src="@drawable/ball"
            android:onClick="increaseScore" />

    </GridLayout>

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="@string/Time"
        android:textSize="40sp"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/scoreText"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score"
        android:textColor="#FFF"
        android:textSize="40sp"/>

</RelativeLayout>